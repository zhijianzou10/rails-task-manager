<h1>Rails Tasks Manager</h1>

<ul>
<% @tasks.each do |t| %>

    <li>
      <% if t.completed == true %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end  %>
      <%= link_to t.title, task_path(t) %> <%= link_to delete_path(t), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </li>
<% end %>
</ul>

<%= link_to "Create a new task", new_path %>
